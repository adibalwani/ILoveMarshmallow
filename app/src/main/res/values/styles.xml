<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/theme_primaryDark</item>
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorAccent">@color/theme_primary</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <!-- List Item style -->
    <style name="ListItemDetails">
        <item name="android:paddingTop">@dimen/item_details_padding_top</item>
        <item name="android:paddingStart">@dimen/item_details_padding_start</item>
        <item name="android:paddingRight">@dimen/item_details_padding_right</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Scroll Item style -->
    <style name="ScrollItemDetails">
        <item name="android:paddingTop">@dimen/item_details_padding_top</item>
        <item name="android:paddingStart">@dimen/item_details_padding_start</item>
        <item name="android:paddingRight">@dimen/item_details_padding_right</item>
        <item name="android:paddingBottom">@dimen/item_details_padding_bottom</item>
    </style>

</resources>
